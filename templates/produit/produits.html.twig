{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Page tous les produits âœ…</h1>

		{% for produit in produits %}

			<h3>{{produit.nom}}</h3>
			<p>{{produit.descriptif}}</p>
			<a href="{{path('produitdetails', {'id':produit.id})}}">Voir le details du produit</a>
		</br>
		<button type="submit" data-name="{{produit.nom}}" data-content="{{produit.descriptif}}" data-img="{{produit.photo}}" class="btn-ajouter">Ajouter au panier</button>
	{% endfor %}
</div>

<div class="example-wrapper">
	<h1>Types de jouets</h1>
	<form method="POST" action="/produit" id="formSearch">
		{% for category in listCategory %}

			<input type="radio" class="formCategory" name="btn" value="{{category.id}}">
			<label for="category.id">
				{{category.typedejouet}}
			</label>

		{% endfor %}
	</form>
</div>{% endblock %}
