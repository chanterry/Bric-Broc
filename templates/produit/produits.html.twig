{% extends 'base.html.twig' %}

{% block title %}Catalogue des jouets
{% endblock %}

{% block body %}

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Tous nos Jouets</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<!-- CSS only -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="css/nav.css">
		<link rel="stylesheet" href="css/card.css">
		<link rel="stylesheet" href="css/style.css">
	</head>

	<body>

		<section id="tous-lesjouets">
			<div class="container">

				<div
					class="row">
					<!--conteneur flex-->
					<div class="col-4 col-md-6 col-xl-3 ">

						<div id="filtre">
							<h3 id="color">Ages</h3>


							<div id="choix">
								<input type="radio" id="age" name="age" value="age" checked>
								<label for="huey">0-12 mois (65)</label>
							</div>

							<div id="choix">
								<input type="radio" id="age" name="age" value="age">
								<label for="dewey">12-24 mois (65)</label>
							</div>

							<div id="choix">
								<input type="radio" id="age" name="age" value="age">
								<label for="louie">24-36 mois (65)</label>
							</div>

							<div id="choix">
								<input type="radio" id="age" name="age" value="age" checked>
								<label for="huey">3-5 ans (65)</label>
							</div>

							<div id="choix">
								<input type="radio" id="age" name="age" value="age" checked>
								<label for="huey">6-9 ans (65)</label>
							</div>

							<div id="choix">
								<input type="radio" id="age" name="age" value="age" checked>
								<label for="huey">10-12 ans (65)</label>
							</div>
							<!-- Boucle sur type de jouet -->
							<h3 class="titrefiltre">Types de jouets
							</h3>
							<form method="POST" action="/produit" id="formSearch">
								{% for category in listCategory %}
									<div>
										<input type="radio" class="formCategory" name="btn" value="{{category.id}}">
										<label for="category.id">
											{{category.typedejouet}}
										</label>
									</div>
								{% endfor %}

								<!-- Boucle sur Marque de jouet -->

								<h3 class="titrefiltre">Marque</h3>
								{% for marque in marque %}
									<div>
										<input type="radio" class="formMarque" name="btnMarque" value="{{marque.Marque}}">
										<label for="marque.id">
											{{marque.Marque}}
										</label>
									</div>
								{% endfor %}
							</form>

						</div>

					</div>

					<div class="col-8 col-md-6 col-xl-9">
						<div
							class="row">
							<!--section cards-->
							{% for produit in produits %}
								<div class="col-8 col-md-6 col-xl-4">
									<div class="card-product">
										<div class="card-product-visuel">
											<a class="tag-new" href="#">new</a>
											<a class="bt-like" href="#"><img src="images/icons/icon_like-20x19.png" alt=""></a>
											<img src="/uploads/{{produit.photo}}" class="card-img-top">
										</div>
										<div class="card-product-body">
											<h3>{{produit.nom}}</h3>
											{#	<p>{{produit.descriptif | raw}}</p>#}
											<a href=" {{path('produitdetails', {'id':produit.id} )}}">Voir le details du produit</a>
										</br>
										<div class="btn btn-primary btn-ajouter" data-name="{{produit.nom}}" data-content="{{produit.descriptif}}" data-img="{{produit.photo}}">Ajouter au panier</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</body>
</section></body><!-- JavaScript Bundle with Popper --><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>{% endblock %}{% block javascripts %}<script src="./js/search.js"></script>{% endblock %}
