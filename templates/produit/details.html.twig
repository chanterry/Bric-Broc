	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{details.nom}}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<!-- CSS only -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

		<link rel="stylesheet" href="public/css/card.css">
		<link rel="stylesheet" href="public/css/style.css">
	</head>


	<section id="fiche_produit">
		<div class="container">
			<div
				class="row">
				<!--CAROUSSEL -->
				<article
					class="caroussel col-12 col-md-6">

					<!--IMAGE DU CAROUSSEL -->
					<img
					src="/uploads/{{details.photo}}" class="d-block img-fluid" alt="...">

					<!-- IMAGES DE LA GALLERIE -->
					<div class="row mt-3 d-none d-md-flex">
						<div class="col-4">
							<img src="images/jouets/page_produit/xylophone_mini1.png" class="imgproduit img-fluid" alt="...">
						</div>

						<div class="col-4">
							<img src="images/jouets/page_produit/xylophone_mini2.png" class="imgproduit img-fluid" alt="...">
						</div>
						<div class="col-4">
							<img src="images/jouets/page_produit/xylophone_mini3.png" class="imgproduit img-fluid" alt="...">
						</div>
					</div>
				</article>

				<article class="col-12 col-md-6">
					<div class="artible-body">
						<h3>{{details.nom}}</h3>
						<div class="descriptif">
							<p>{{details.descriptif | raw}}</p>
						</div>

						<ul class="row">
							<li class="col-6 icon-wood">Bois</li>
							<li class="col-6 icon-glue">Colle écologique</li>
							<li class="col-6 icon-natural">Encre naturel</li>
							<li class="col-6 icon-eco">Plastique recyclé</li>
						</ul>


						<div
							class="row">
							<!--conteneur flex-->
							<div class="col-12 col-md-6 col-xl-6 ">
								<button type="submit" data-name="{{details.nom}}" data-content="{{details.descriptif}}" data-img="{{details.photo}}" class="btn-ajouter btn btn-primary">Ajouter a ma box</button>
							</div>
							<div id="dispo">
								<p>
									<img src="images/icons/icon_dispo-jouets.png">Disponible</p>

							</div>
						</div>
					</div>
				</article>
			</div>
		</div>
	</section>
	<section id="avantages">
		<div class="container">
			<div
				class="row">
				<!--conteneur flex-->

				<div class="col-12 col-md-6 col-xl-3 text-center">
					<img src="images/avantages-bricetbroc/truck-delivery.png">
					<p>Livraison gratuite</p>
				</div>

				<div class="col-12 col-md-6 col-xl-3 text-center">
					<img src="images/avantages-bricetbroc/return-box.png">
					<p>Retour gratuit</p>
				</div>

				<div class="col-12 col-md-6 col-xl-3 text-center">
					<img src="images/avantages-bricetbroc/secure-payment_v2.png">
					<p>Paiement 100% sécurisé</p>
				</div>


				<div class="col-12 col-md-6 col-xl-3 text-center">
					<img src="images/avantages-bricetbroc/flexibility-box.png">
					<p>100% flexible</p>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
